'''
Generating smoothed frequencies for ama1 dynamics.
'''
files=range(1,101)

rule all:
    input:
        params = 'output/params.npy',
        sims = 'output/sims.npz',
        paramsMech = 'output/paramsMech.npy',
        simsMech = 'output/simsMech.npz'

